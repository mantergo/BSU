<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:label="@string/app_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paul.calculator1.MainActivity"
    android:background="@color/colorBackground">




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/n1"
        android:layout_marginBottom="109dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/n3"
        android:layout_alignTop="@+id/n2"
        android:layout_toRightOf="@+id/n2"
        android:layout_toEndOf="@+id/n2"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/n2"
        android:layout_alignTop="@+id/n1"
        android:layout_toRightOf="@+id/n1"
        android:layout_toEndOf="@+id/n1"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/n0"
        android:layout_below="@+id/n2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=","
        android:id="@+id/scomma"
        android:layout_below="@+id/n2"
        android:layout_toRightOf="@+id/n0"
        android:layout_toEndOf="@+id/n0"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/sclear"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"
        android:layout_above="@+id/n8"
        android:layout_toLeftOf="@+id/n6"
        android:layout_toRightOf="@+id/n7"
        android:layout_toEndOf="@+id/n7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CE"
        android:id="@+id/sclearall"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"
        android:layout_alignTop="@+id/sclear"
        android:layout_toRightOf="@+id/sclear"
        android:layout_alignRight="@+id/sminus"
        android:layout_alignEnd="@+id/sminus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/n4"
        android:layout_above="@+id/n1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/n5"
        android:layout_above="@+id/n3"
        android:layout_alignLeft="@+id/n2"
        android:layout_alignStart="@+id/n2"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/n6"
        android:layout_above="@+id/n3"
        android:layout_toRightOf="@+id/n2"
        android:layout_toEndOf="@+id/n2"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/n7"
        android:layout_above="@+id/n4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/n8"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"
        android:layout_below="@+id/editText1"
        android:layout_toLeftOf="@+id/n6"
        android:layout_toStartOf="@+id/n6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/n9"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"
        android:layout_below="@+id/sclear"
        android:layout_toRightOf="@+id/sclear"
        android:layout_toEndOf="@+id/sclear" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/sequal"
        android:layout_below="@+id/n3"
        android:layout_alignLeft="@+id/n3"
        android:layout_alignStart="@+id/n3"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/smultiply"
        android:layout_below="@+id/n3"
        android:layout_toRightOf="@+id/sequal"
        android:layout_alignRight="@+id/sdivide"
        android:layout_alignEnd="@+id/sdivide"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รท"
        android:id="@+id/sdivide"
        android:layout_below="@+id/n6"
        android:layout_toRightOf="@+id/n3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/sminus"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"
        android:layout_above="@+id/splus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/n6"
        android:layout_toEndOf="@+id/n6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/splus"
        android:layout_below="@+id/n9"
        android:layout_toRightOf="@+id/n6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:theme="@style/MyButton"
        android:textColor="@color/buttonTextColor"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:layout_marginBottom="125dp"
        android:layout_above="@+id/n7"
        android:layout_alignLeft="@+id/n7"
        android:layout_alignStart="@+id/n7"
        android:layout_alignRight="@+id/sminus"
        android:layout_alignEnd="@+id/sminus"
        android:textColor="@color/buttonTextColor" />

</RelativeLayout>
